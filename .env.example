# ====================================================================
# TROUBLESHOOTING
# ====================================================================

# If you get CUDA errors:
# USE_GPU=false

# If responses are too slow:
# LLM_MODEL=google/flan-t5-small
# TOP_K_RETRIEVE=3

# If you get memory errors:
# MAX_CONTEXT_LENGTH=2000
# CHUNK_SIZE=256

# If port is already in use:
# PORT=8502